{
  "name": "Youtube Shorts to Videos",
  "version": "1.0.1",
  "short_name": "YTShorts2Vids",
  "description": "Automatically redirects Youtube shorts to videos.",
  "manifest_version": 3,
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [{
    "matches": ["https://www.youtube.com/*"],
    "run_at": "document_end",
    "js": ["index.js"],
    "all_frames": true
  }]
}
